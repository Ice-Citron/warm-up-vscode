{
	"name": "warm-up-typing-test",
	"displayName": "Warm Up - Practice typing",
	"description": "Todo",
	"version": "0.0.1",
	"license": "GPL 3.0",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:warmUp.start",
		"onWebviewPanel:warmUp"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "WarmUp: Practice typing",
				"properties": {
					"warmup.switchLanguage": {
						"type": "string",
						"enum": [
							"english",
							"french"
						],
						"default": "english",
						"description": "Choose a specific language to practice with",
						"scope": "window"
					}
				}
			},
			{
				"title": "WarmUp: Practice typing",
				"properties": {
					"warmup.switchTypingMode": {
						"type": "string",
						"enum": [
							"wordcount",
							"time"
						],
						"default": "wordcount",
						"description": "Practice a set number of words or against a timer",
						"scope": "window"
					}
				}
			},
			{
				"title": "WarmUp: Practice typing",
				"properties": {
					"warmup.togglePunctuation": {
						"type": "string",
						"enum": [
							"true",
							"false"
						],
						"default": "false",
						"description": "Activate/deactivate punctuation",
						"scope": "window"
					}
				}
			},
			{
				"title": "WarmUp: Practice typing",
				"properties": {
					"warmup.changeCount": {
						"type": "string",
						"enum": [
							"15",
							"30",
							"60",
							"120",
							"240"
						],
						"default": "15",
						"description": "Change the amount of words or the timer (depending on the typing mode)",
						"scope": "window"
					}
				}
			}
		],
		"commands": [
			{
				"command": "warmUp.start",
				"title": "Start practicing typing",
				"category": "WarmUp"
			},
			{
				"command": "warmUp.switchLanguage",
				"title": "Switch language",
				"category": "WarmUp"
			},
			{
				"command": "warmUp.switchTypingMode",
				"title": "Switch typing mode",
				"category": "WarmUp"
			},
			{
				"command": "warmUp.changeCount",
				"title": "Change word/time count",
				"category": "WarmUp"
			},
			{
				"command": "warmUp.togglePunctuation",
				"title": "Toggle punctuation",
				"category": "WarmUp"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -w -p ./"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.47.0",
		"@types/vscode-webview": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.3.5"
	}
}